{% extends 'base.html.twig' %}

{% block title %}Enjoy Killing with KGB Corp!{% endblock %}

{% block body %}
    <main class="body__home__main">
        <div class="container">
            <div class="row pt-5">
                {{ form(form, {'attr': {'class': 'd-flex justify-content-center p-0'}}) }}
            </div>
        </div>
        <div class="container p-4 d-flex flex-wrap justify-content-center">
            {% for mission in missions %}
                <div class="p-4">
                    <div class="card shadow border-0" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{ mission.title }}</h5>
                            <p class="card-text">{{ mission.getMissionCode }}</p>
                            <p class="card-text">{{ mission.country }}</p>
                            <p class="card-text">{{ mission.status }}</p>
                            <p class="card-text">{{ mission.type }}</p>
                            <p class="card-text">{{ mission.description|u.truncate(80, '...', false) }}</p>
                            <p class="card-text">{{ mission.getStartDate|date('d/m/Y') }}</p>
                            <a href="/mission/{{ mission.id }}" class="btn btn-primary">Get Full Mission</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="d-flex justify-content-center pt-5">
            {% do missions.setPageRange(4) %}
            {{ knp_pagination_render(missions, 'base/pagination.html.twig') }}
        </div>
    </main>
{% endblock %}